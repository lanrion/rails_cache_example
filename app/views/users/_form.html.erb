    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <%= f.label :comfired_at %><br>
    <%= f.text_field :comfired_at %>
  </div>

  <hr>
  Profile:
  <%= f.fields_for :profile do |profile| %>
    <div class="field">
      <%= f.label :age %>
      <%= profile.text_field :age %>
    </div>    

    <div class="field">
      <%= f.label :sex %>
      <%= profile.text_field :sex %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
